// 串行语句
reg [4:0] m;
begin
    #10m = 8'h35;
    #10m = 8'he2;
    #20m = 8'h00;
    #10 ->end_wave;
end
// 并行语句
reg [5:0] m;
fork
    #10m = 8'b90;
    #10m = 8'h876;
    #15m = 8'b00;
    #10 ->end_wave;
join
// 延时控制
initial begin
    // 开始为0；
    a=0;
    // 10秒后为1
    #10a = 1;
    b=2;
    #18b = 3;

end
// 